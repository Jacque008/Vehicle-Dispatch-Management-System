/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
}

.container {
  padding: 32rpx;
}

/* Common styles */
.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  text-align: center;
  margin-bottom: 96rpx;
}

.card {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #333;
}

.input {
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  background-color: white;
}

.button-primary {
  background-color: #2563eb;
  color: white;
  padding: 28rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 16rpx;
}

.button-primary:active {
  background-color: #1d4ed8;
}

.button-secondary {
  background-color: transparent;
  color: #2563eb;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.button-disabled {
  background-color: #e5e7eb;
  color: #9ca3af;
}

.text-center {
  text-align: center;
}

.text-gray {
  color: #666;
}

.text-small {
  font-size: 24rpx;
}

.mt-small {
  margin-top: 16rpx;
}

.mt-medium {
  margin-top: 32rpx;
}

.mb-small {
  margin-bottom: 16rpx;
}

.mb-medium {
  margin-bottom: 32rpx;
}
