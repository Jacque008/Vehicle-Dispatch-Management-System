/* pages/assignments/assignments.wxss */
.tabs {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 32rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.tab-active {
  background-color: #2563eb;
  color: white;
  font-weight: 600;
}

.loading {
  text-align: center;
  padding: 96rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 96rpx 32rpx;
}

.empty-text {
  color: #666;
  font-size: 28rpx;
}

.assignments-list {
  /* Add any list-specific styles */
}

.assignment-card {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.assignment-title {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  margin-right: 16rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  text-transform: capitalize;
  white-space: nowrap;
}

.status-draft {
  background-color: #e5e7eb;
  color: #374151;
}

.status-dispatched {
  background-color: #fbbf24;
  color: #92400e;
}

.status-filled {
  background-color: #10b981;
  color: #064e3b;
}

.status-cancelled {
  background-color: #ef4444;
  color: #991b1b;
}

.assignment-description {
  display: block;
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.assignment-info {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.info-label {
  color: #666;
  width: 100rpx;
  margin-right: 16rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.assignment-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-accept,
.btn-decline {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.btn-accept {
  background-color: #10b981;
  color: white;
}

.btn-decline {
  background-color: #ef4444;
  color: white;
}
