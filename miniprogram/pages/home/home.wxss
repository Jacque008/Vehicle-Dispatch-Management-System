/* pages/home/home.wxss */
.welcome-section {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  padding: 48rpx 32rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  color: white;
}

.welcome-title {
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}

.welcome-subtitle {
  font-size: 44rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 16rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
  text-transform: capitalize;
}

.status-applied {
  background-color: #fbbf24;
  color: #92400e;
}

.status-tested {
  background-color: #60a5fa;
  color: #1e3a8a;
}

.status-qualified {
  background-color: #34d399;
  color: #065f46;
}

.status-active {
  background-color: #10b981;
  color: #064e3b;
}

.status-inactive {
  background-color: #9ca3af;
  color: #1f2937;
}

.status-dispatched {
  background-color: #f59e0b;
  color: #78350f;
}

.status-filled {
  background-color: #6366f1;
  color: #312e81;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 24rpx;
}

.loading {
  text-align: center;
  padding: 48rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 48rpx;
}

.empty-text {
  color: #666;
  font-size: 28rpx;
}

.assignment-card {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.assignment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.assignment-title {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
}

.assignment-description {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.assignment-time {
  display: flex;
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.time-label {
  color: #666;
  margin-right: 16rpx;
  width: 80rpx;
}

.time-value {
  color: #333;
  font-weight: 500;
}

.assignment-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-accept,
.btn-decline {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
}

.btn-accept {
  background-color: #10b981;
  color: white;
}

.btn-decline {
  background-color: #ef4444;
  color: white;
}

.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  background-color: white;
  color: #2563eb;
  border: 2rpx solid #2563eb;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}
