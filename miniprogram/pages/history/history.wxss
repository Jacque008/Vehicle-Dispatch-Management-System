/* pages/history/history.wxss */
.header {
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1f2937;
}

.loading {
  text-align: center;
  padding: 96rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 96rpx 32rpx;
}

.empty-text {
  color: #666;
  font-size: 28rpx;
}

.history-list {
  /* Add any list-specific styles */
}

.history-card {
  background-color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
  margin-right: 16rpx;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: 600;
  text-transform: capitalize;
  white-space: nowrap;
}

.status-completed {
  background-color: #10b981;
  color: #064e3b;
}

.status-cancelled {
  background-color: #ef4444;
  color: #991b1b;
}

.status-confirmed {
  background-color: #3b82f6;
  color: #1e3a8a;
}

.card-description {
  display: block;
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.card-info {
  margin-top: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.info-label {
  color: #666;
  width: 140rpx;
  margin-right: 16rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.response-badge {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  text-transform: capitalize;
}

.response-accepted {
  background-color: #d1fae5;
  color: #065f46;
}

.response-declined {
  background-color: #fee2e2;
  color: #991b1b;
}

.response-pending {
  background-color: #fef3c7;
  color: #92400e;
}
